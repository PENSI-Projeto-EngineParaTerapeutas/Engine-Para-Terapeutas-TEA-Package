:root {
	flex: 1;
	height: 100%;
}

#regiao-titulo {
	flex-direction: row;
	align-items: center;
	margin-left: 6px;
	margin-bottom: 9px;
}

#descricao-funcionalidades {
	font-size: 13px;
	margin-bottom: 18px;
}

#regiao-conteudo-principal, #regiao-conteudo-principal > VisualElement > VisualElement > VisualElement {
	flex: 1;
}

#regiao-carregamento-associacoes {
	flex: 1;
	padding: 6px;
	border-color: rgba(128, 128, 128, 0.57);
	border-width: 1px;
	border-radius: 6px;
	margin-bottom: 21px;
}

.associacao-elemento {
	margin-bottom: 12%;
}

#regiao-carregamento-botoes-confirmacao {
	flex-direction: row;
}

#input-desfazer-acao {
	flex: 0.05;
}

#regiao-carregamento-botoes-confirmacao > TemplateContainer {
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

#regiao-carregamento-botoes-confirmacao > TemplateContainer > #botao-confirmar {
	border-radius: 15px;
}

#regiao-carregamento-botoes-confirmacao > TemplateContainer > #botao-cancelar {
	border-width: 0px;
	margin-top: 6px;
}